{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fallout Star-Trek Scripting Language",
	"patterns": [
		{"include": "#function-invocation"},
		{"include": "#keywords"},
		{"include": "#variable"},
		{"include": "#strings"},
		{"include": "#comments"},
		{"include": "#function-declaration"},
		{"include": "#function-definition"},
		{"include": "#types"},
		{"include": "#constants"}
	],
	"repository": {
		"function-invocation": {
			"name": "meta.function.inv.ssl",
			"patterns": [
				{
					"match": "\\b(call)\\b[[:blank:]]+(\\w+)(\\(.+\\))??(;)",
					"captures": {
						"1": {"name": "keyword.control.ssl"},
						"2": {"name": "support.function.ssl"},
						"3": {"patterns": [{"include": "$self"}]},
						"4": {"name": "keyword.control.ssl"}
					}
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ssl",
				"match": "\\b(if|while|for|return|then|begin|foreach|continue|in|call|end|else|continue|do|variable)\\b|(;)"
			},
			{
				"name": "keyword.control.import.ssl",
				"match": "(\\#include)"
			},
			{
				"name": "meta.define.ssl",
				"match": "(#define)[[:blank:]]+(\\w+)(\\(\\w+\\))??[[:blank:]]+(.+)",
				"captures": {
					"1": {"name": "keyword.control.ssl"},
					"2": {"name": "variable.language.ssl"},
					"4": {"patterns": [{"include": "$self"}]}
				}
			},
			{"include": "#operators"}
			]
		},
		"operators": {
			"patterns": [{
				"match": "(\\b(or|and|not)\\b)|(=|:|>|<|\\+\\+|\\-|\\+|;|!)",
				"name": "keyword.control.ssl"
			}]
		},
		"types":{
			"patterns": [{
				"match": "\\b(int|string|ObjectPtr)\\b",
				"name": "support.type.ssl"
			}]
		},
		"constants": {
			"patterns": [
				{
					"match": "\\b(true|false)\\b",
					"name": "constant.language.ssl"
				}
			]
		},
		"function-definition": {
			"name": "meta.function.def.ssl",
			"patterns": [
				{
					"match": "\\b(procedure)\\b[[:blank:]]+(\\w+)(\\(.+\\))?[[:blank:]]+(begin)",
					"captures": {
						"1": {"name": "support.type.procedure.ssl"},
						"2": {"name": "entity.name.function"},
						"3": {"patterns": [{"include": "#variable"}]},
						"4": {"name": "keyword.control.ssl"}
					}
				}
			]
		},
		"function-declaration": {
			"name": "meta.function.dec.ssl",
			"patterns": [
				{
					"match": "\\b(procedure)\\b[[:blank:]]+(\\w+)(\\(.+\\))?[[:blank:]]*(;)",
					"captures": {
						"1": {"name": "support.type.procedure.ssl"},
						"2": {"name": "entity.name.function"},
						"3": {"patterns": [{"include": "#variable"}]},
						"4": {"name": "keyword.control.ssl"}
					}
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"match": "\\b(variable)\\b",
					"name": "keyword.control.ssl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"match": "(//).*",
					"name":"comment.line.ssl"
				},
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name":"comment.block.ssl"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ssl",
			"begin": "\"",
			"end": "\""
		}

	},
	"scopeName": "text.ssl"
}